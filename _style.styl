@import '_mixin.styl'

blue-color = #03a8fa
gray-color = #333
gray-bg = #f6f8f9
wrp = 1000px

body
	font-family 'Circe-Regular'
ul
	list-style none

.wrapper
	width wrp
	margin 0 auto


/* temp box */
/*
	font-family: 'Circe-Bold';
	font-family: 'Circe-Light';
	font-family: 'Circe-Regular';
	font-family: 'Circe-ExtraBold';
*/



a
	text-decoration none

/* static style */	
.button-blue
	border-radius: 5px;
	background-color blue-color
	border none
	font-size 20px
	color #fff
	font-family 'Circe-Bold'
	display block
	cursor pointer
	box-shadow: 0px 5px 25px 0px rgba(0, 1, 2, 0.1),inset 0px 0px 20px 0px rgba(0, 1, 2, 0.1);

.button-transparent
	border: 1px rgb(221, 223, 224) solid;
	border-radius: 3px;
	color gray-color
	font-size 15px
	text-transform: initial;
	font-family 'Circe-Regular'
	padding 4px 13px
	transition background .3s ease
	&:hover
		background-color #dddfe0 


.input-white
	width calc(100% - 40px)
	height 48px
	border-style: solid;
	padding-left 20px
	padding-right 20px
	border-width: 1px;
	font-size 16px
	border-color: rgb(221, 225, 231);
	border-radius: 5px;
	background-color: rgb(255, 255, 255);
	box-shadow: 0px 5px 25px 0px rgba(0, 1, 2, 0.1),inset 0px 0px 10px 0px rgba(0, 1, 2, 0.05);

.section-title
	font-size 32px
	font-family 'Circe-Bold'
	text-transform uppercase
	padding-top 80px
	padding-bottom 50px
.section-title__text
	display inline-block
	vertical-align: sub;
	


/* header */
header
	background-color #fff
	border-bottom 1px #dde1e7 solid
	padding: 10px 0px
.header-align
	
	clear()

/* header-logo */
.header-logo
	float left

/* city select */
.city-select
	font-family 'Circe-Regular'
	font-size 16px
	margin-left 90px
.city-select__title
	color gray-color
	display inline-block
.city-list
	color blue-color
	display inline-block
.city-select__ico
	background-image url('../images/ico/flag.png');
	width 14px
	height 17px
.city-list__ico
	background-image url('../images/ico/flag.png');

/* header-quest */
.header-quest
	float right
	width 69px
	margin-top -10px
	margin-bottom -10px
	margin-left 30px
	not_select()
.header-quest__link
	background-color #dde1e7
	color #fff
	font-family 'Circe-Bold'
	font-size 34px
	line-height 64px
	display block
	text-align center
	text-decoration none
	
/* header-link */
.header-link
	font-family 'Circe-Regular'
	padding: 14px 0;
	+ .header-link
		margin-right 50px
.header-link__url
	font-size 16px
	color gray-color
	&:hover
		color blue-color
.header-link--right
	float right
.header-link--left
	float left
	
/* big menu */
.big-menu
	background-color gray-bg
	clear()
.big-menu-item
	width: calc(25% - 1px);
	float left
	position relative
	height: 160px;
	&:first-child
		border-right 1px #eaebec solid
	&:last-child
		border-right 1px #eaebec solid
	&:first-child
		border-left 1px #eaebec solid
	&:hover
		.big-menu-item__svg
			fill blue-color
.big-menu-item__name
	font-family 'Circe-Bold'
	font-size 22px
	margin-left 30px
.big-menu-item__description
	font-size 13px
	color #8a8a8a
	margin-top 3px
	margin-left 30px
	font-family: Arial, Tahoma, Georgia, sans-serif;
.big-menu-item__url
	position absolute
	width 100%
	height 100%
	z-index 1
	top 0
	left 0
.big-menu-item__ico
	text-align center
	height 88px
.big-menu-item__svg
	transition fill .2s ease;
	height 100px
.big-menu-item__svg--p1
	width 60px
.big-menu-item__svg--p2
	width 70px
.big-menu-item__svg--p3
	width 95px
.big-menu-item__svg--p4
	width 90px
	
/* slogan box */
.slogan-box
	color #fff
	height 670px
	text-align center
	background-image url('../images/slogan-bg.jpg');
	img-center()
.slogan-box__subslogan
	font-size 20px
	padding-top 80px
.slogan-box__slogan
	font-size 44px
	font-family 'Circe-Bold'
	margin-top 18px
	letter-spacing 1.25px
	
/* filter box */
.filter-box
	margin-top:-370px
.search
	clear()
.search__input
	float left
	width calc(100% - 260px)
.search__button
	width 205px
	height 52px
.search__button--right
	float right
.search__button--center
	margin 0 auto
.filter-parametr
	background-color #fff
	margin-top 13px
	position relative
	&:after
		content ""
		position absolute
		background-image url('../images/filter-shadow.png');
		background-position center center
		width 100%
		height 107px
		bottom: -70px;
		display block
.filter-submit-box
	position relative
	padding-top 30px
	padding-bottom 35px
	background-color #f6f8f9
	z-index 1
.filter-parametr__header		
	border-bottom 1px #dddfe0 solid
	padding 0px 20px
	clear()
.filter-header-item
	float left
	position relative
	z-index 1
	cursor pointer
	padding 35px 10px
	+ .filter-header-item
		margin-left 57px
	&:hover, &.filter-header-item--active
		.filter-header-item--bottom	
			height 4px
.filter-header-item--bottom		
	background-color blue-color
	height 0px
	width 100%
	-webkit-transition: height 0.2s ease-in-out;
	-moz-transition: height 0.2s ease-in-out;
	-o-transition: height 0.2s ease-in-out;
	transition: height 0.2s ease-in-out;
	position absolute
	bottom -3px
	left 0
.filter-header-item__count
	font-size 14px
	color #8a8a8a
	margin-top 5px
.filter-header-item__name
	font-size 24px
	font-family 'Circe-Bold'
.filter-section-box
	padding 30px 30px
	clear()
.filter-section__list
	clear()
	margin-left -5px
	display none
.filter-section__list.current
	display block
.filter-section__item
	border:1px #cfcfcf solid;
	border-radius: 2px;
	font-size 14px
	float left
	padding 8px 18px
	not_select()
	cursor pointer
	margin 8px 6px
	font-family: Arial, Tahoma, Georgia, sans-serif;
	&:hover, &.filter-section__item--active
		box-shadow: 0px 2px 5px 0px rgba(3, 139, 206, 0.35),inset 0px 0px 20px 0px rgba(0, 1, 2, 0.1);
		background-color blue-color
		color #fff
		border none
		border 1px transparent solid
		
/* step box */
.step-section
	clear()
	padding-top 60px
	padding-bottom 35px
.steps-list
	clear()
	margin-top 35px
.step-title
	font-size 55px
	color #e8e8e8
	font-family 'Circe-ExtraBold'
	text-transform uppercase
	position relative
	margin-left: 190px;
	&:before
		content ""
		background-image url('../images/step-title.png');
		width 70px
		height 60px
		display block
		position absolute
		top 5px
		left -85px
.steps-item__cover
	width 80px
	height 80px
	border-radius 50%
	margin 0 auto
	position relative
	box-shadow: 0px 5px 25px 0px rgba(0, 1, 2, 0.15);
.steps-item__cover--blue
	background-color blue-color;
.steps-item__cover--white
	background-color #fff
.steps-item__name
	font-size 20px
	color #111111
	margin-top 10px
.steps-item__description	
	font-size 14px
	color #8a8a8a
	margin-top 5px
.steps-item
	width 25%
	text-align center
	float left
	position relative
.steps-item__img
	width 50px
	height 80px
.steps-item__img--white
	fill #fff
.steps-item__img--gray
	fill #878a95
.step-arrow
	fill #e8e8e8
	width 18px
	height 102px
	position absolute
	top: -10px;
	right: -93px;
.step-arrow-dega
	transform rotate(91deg)
.step-arrow-degb
	transform rotate(87deg)
.step-section__background
	background-image url('../images/step-bg.png');
	background-repeat repeat
	padding-bottom 30px	
/* reviews-slider */
.reviews-slider
	background-color gray-bg
	position relative
.all-reviews-url
	margin-left 15px
.reviews-item__text
	font-size 14px
	color #666
	margin-top 35px
	line-height 20px
	font-family: Arial, Tahoma, Georgia, sans-serif;
.reviews-item__name
	font-size 20px
	margin-top 25px
.reviews-item__job
	font-size 13px
	color #666
	margin-top 5px
.reviews-item__cover
	width 100%
	height 90px
	background-position center center
	background-repeat no-repeat
.reviews-item
	background-color #fff
	border 1px #f0f0f0 solid
	padding 30px 25px
	float left
	width calc(335px - 52px)
	+ .reviews-item
		margin-left -1px
.reviews-slider
	overflow hidden
	.wrapper
		/*position relative*/
			
.reviews-slider__align
	position relative
	height 330px
	clear()
.reviews-slider__align--vertical
	position absolute
	width 100%
	right 0%
	clear()
.mask-blur
	position: absolute;
	height: 100%;
	width: 100%;
	z-index: 5;
	right: calc(-100% + -3px);
	background-color: rgba(255, 255, 255, 0.8);
	
.partners
	clear()
	margin-top 80px
	margin-bottom 60px
.partners__item
	float left
	width 150px
	text-align center
	margin-left 60px
	&:first-child
		margin-left 0px
.partners__url
	display table-cell
	vertical-align middle
	height 50px
.reviews-slider-control
	float right
.reviews-slider-control__bnt--prev
	background-image url('../images/ico/slide-prev.png');
	border-radius: 3px 0px 0px 3px;
.reviews-slider-control__bnt--next
	background-image url('../images/ico/slide-next.png');
	border-radius: 0px 3px 3px 0px;
	margin-left -1px
.reviews-slider-control__btn
	background-position center center
	background-repeat no-repeat
	padding: 4px 15px;
	
/* news list */
.main-news
	clear()
	padding-bottom 65px
.news-item
	float left
	position relative
	padding 25px
	border: 1px #f0f0f0 solid;
	width calc(335px - 53px)
	+ .news-item
		margin-left -1px
	&:hover
		.news-item__cover
			opacity 1
		.news-item__name
		.news-item__text
		.news-item__date
			color #fff
.news-item__name
	font-size 20px
	line-height 24px
	position relative
.news-item__text
	position relative
	font-size 14px
	color #8a8a8a
	line-height 20px
	margin-top 10px
.news-item__date
	position relative
	font-size 18px
	color #333333
	margin-top 35px
.news-item__cover
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	opacity 0
	img-center()
.news-item__url
	@extend .big-menu-item__url
	

/* footer */
@import "_mixin.styl"
social-size()
	background-image url(../images/ico/social.png)
	width 34px
	height 32px
	display block

.footer
	background-color #f6f8f9

.footer-top	
	clear()
.footer-info
	width 185px
	padding-top 33px
	float left
	margin-right 60px
.footer-info-logo
	margin-bottom 20px
.footer-info-content
	color #9d9e9f
	font-size 14px
	line-height: normal;
.content-email__link
	color black
	font-size 20px
	font-family 'Circe-Regular'
	margin 20px 0 5px 0
.footer-info-content__social
	li
		display inline-block
		text-align center
		margin-top 23px
.info-content__fb
	social-size()
.info-content__vk
	social-size()
	background-position -40px 0
.info-content__g-plus
	social-size()
	background-position -80px 0
.info-content__tw
	social-size()
	background-position -120px 0
.footer-links
	float left
	padding-top 33px
	line-height 2.4
	width 260px
	margin-right 20px
.footer-links
	a
		font-family "Circe-Regular"
		color #000
		text-transform none
		line-height 33px;
		&:hover
			text-decoration underline
.footer-service
	width 465px
	float left
	padding-top 33px 
.footer-service__article
	font-family "Circe-Bold"
	font-size 20px
	font-weight bold
	margin-bottom 20px
.service-money__visa
	display block
	width 52px
	height 25px
	background-image url(../images/ico/money_ico.png)
	margin-right 18px
.service-money__mcard
	display block
	width 45px
	height 28px
	background-image url(../images/ico/money_ico.png)
	background-position -73px 0
	margin-right 18px
.service-money__qivi
	display block
	width 58px
	height 28px
	background-image url(../images/ico/money_ico.png)
	background-position -140px 0
	margin-right 18px
.service-money__ya
	display block
	width 70px
	height 28px
	background-image url(../images/ico/money_ico.png)
	background-position -216px 0
	margin-right 14px
.service-money__wmoney
	display block
	width 107px
	height 28px
	background-image url(../images/ico/money_ico.png)
	background-position -293px 0
.footer-service__money
	li
		display inline-block
.footer-service__content
	font-size 14px
	line-height normal
	color #9d9e9f
	margin-bottom 40px
.footer-bottom
	font-family "Circe-Regular"
	padding-top 50px
	padding-bottom 33px
	clear()
.footer-bottom__copyright
	font-size 14px
	float left
.kolibri__link
	background-image url(../images/logo_clbr.png)	
	background-repeat no-repeat
	background-position right
	display inline-block
	vertical-align middle
	padding-right 60px
	color #000
	float right
.footer-info-content__email
	margin-top 20px